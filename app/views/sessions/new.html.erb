<strong><i><h1 class="display-4 font-italic mt-3 " style="text-align:center">Secret Santa</h1></i></strong>

<div class="container shadow-lg p-3 rounded mt-4" id="login-container">
  <div class="row">    
    <%= form_with(scope: :session, url: login_path, local: true) do |f|%>
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Log in</h4>          
          <div class="col-10">
            <%= f.email_field :email, class: "form-control mt-3  rounded", placeholder: "Enter your email" %>
          </div>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control mt-3  rounded", placeholder: "Enter your password" %>
          </div>            
          <%= f.submit "Log in", class:"btn btn-outline-success mt-5" %> 
          <%= link_to "Create account", signup_path, class:"btn btn-outline-danger mt-5 right" %>              
        </div>
      </div>
    <% end %>    
  </div>
</div>